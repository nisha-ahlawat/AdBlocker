{
  "manifest_version": 3,
  "name": "AdBlocker by Nisha",
  "version": "1.0",
  "description": "Blocks ads on websites. Made by Nisha Ahlawat",

  "permissions": [
    "declarativeNetRequest",
    "storage",
    "activeTab"
  ],

  "host_permissions": [
    "*://*/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },

  "icons": {
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}